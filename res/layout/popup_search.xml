<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/popup_element"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#C0000000"
        >


    <LinearLayout
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android"
            >
        <SearchView
                android:imeOptions="flagNoExtractUi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:queryHint="Type to search"
                android:iconifiedByDefault="false"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:id="@+id/searchView">
            <requestFocus />
                </SearchView>

        <ImageView
                android:id="@+id/btn_close_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_clear_normal"
                android:layout_gravity="right"

                android:layout_alignParentTop="true"/>
    </LinearLayout>
    <!--android:layout_marginTop="20dp"-->
    <LinearLayout
            android:id="@+id/search_titles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="left|center_vertical">
        <TextView
                android:id="@+id/peopleListTitleView"
                android:text="People"
                  android:layout_marginLeft="10dp"
                  android:textColor="#ffffff"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/topicListTitleView"
                    android:text="Topics"
                  android:layout_marginLeft="10dp"
                  android:textColor="#ffffff"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                />
        <TextView
                android:id="@+id/publisherListTitleView"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publishers"
                android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/search_titles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="left|center_vertical">
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/search_titles"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical">
        <ListView
                android:textColor="#ffffff"

                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/activitiesListView" android:layout_gravity="center|top"/>
        <ListView


                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/topicsListView" android:layout_gravity="center|top"/>


        <ListView
                android:textColor="#ffffff"

                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/feedListView" android:layout_gravity="center|top"/>
    </LinearLayout>

</LinearLayout>