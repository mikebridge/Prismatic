<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- title color #262626" -->
    <!-- font family: Helvetica Newe, Helvetica, Arial" -->
    <style name="AppTheme">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>

    </style>
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="LightThemeSelector" parent="android:Theme.Light">
    </style>

    <style name="cardListStyle">

        <item name="android:layout_margin">3dp</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@android:color/transparent</item>

    </style>

     <style name="cardStyle" parent="RobotoTextViewStyle">
        <item name="android:background">@drawable/search_bg_shadow</item>
        <item name="android:colorBackground">#f2f2f2</item>
        <item name="android:padding">20dp</item>


        <item name="android:gravity">left</item>
        <item name="android:minHeight">150dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#262626</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cardTitleStyle" parent="RobotoTextViewStyle">
        <item name="android:textColor">#262626</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <!--item name="android:textStyle">bold</item-->
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="cardMainImageStyle"  >
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="imageLoadingProgressBackground" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="largeImageLoadingProgressBackground" parent="imageLoadingProgressBackground">
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="halfImageLoadingProgressBackground" parent="imageLoadingProgressBackground">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="imageLoadingProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>
    <style name="cardHalfImageStyle" >

        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>
    <style name="cardTextStyle" parent="RobotoTextViewStyle">
        <item name="android:textColor">#262626</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>



    <style name="cardKeywordLayoutStyle">

        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="cardFeedIconStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <!--item name="android:layout_gravity">left</item-->
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>
    <style name="cardKeywordStyle" parent="RobotoTextViewStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <!--item name="android:layout_centerVertical">true</item-->
        <item name="android:textColor">#0088cc</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="cardKeywordStyleDull" parent="cardKeywordStyle">
        <item name="android:textColor">#404040</item>
    </style>

    <style name="cardKeywordStyleLight" parent="cardKeywordStyle">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="cardFooterLayoutStyle">
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="cardFooterImageStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>
    <style name="cardFooterTextStyle"  parent="RobotoTextViewStyle">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <!--item name="android:layout_centerVertical">true</item-->
        <item name="android:textColor">#0088cc</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="genericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#DD111111</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="genericProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="drawerTextItem">
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:colorBackground">@color/ScrollingWindowBackround</item>
        <item name="android:textColor">#262626</item>
    </style>
    <style name="drawerListStyle">

        <item name="android:layout_width">150dp</item>
        <item name="android:divider">#c0c0c0</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">#f2f2f2</item>
    </style>
    <style name="searchResultTextItem">
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>


</resources>